# Required - API keys (get new ones, never commit actual values)
HELIUS_API_KEY=your_helius_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required - Security secrets (generate secure random strings)
JWT_SECRET=generate_a_secure_random_string_here
ADMIN_PASSWORD=generate_a_secure_admin_password_here

# Required for production - Database
TURSO_DATABASE_URL=your_turso_database_url
TURSO_AUTH_TOKEN=your_turso_auth_token

# Required for production - CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Required at launch - $SIGHT token contract address
# Set this to your deployed token's contract address on Solana
SIGHT_TOKEN_CA=your_sight_token_contract_address
VITE_SIGHT_TOKEN_CA=your_sight_token_contract_address

# Optional - Node environment
NODE_ENV=production
